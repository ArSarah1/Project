pipeline {
    agent { label 'agent1' }
    stages {
stage("GIT") {
    steps {
        echo "Getting Project from Git"
        git branch: "master",
            url: "https://github.com/ArSarah1/Project.git"
    }
}
        stage('Maven') {
            steps {
                sh 'mvn --version'
            }
        }
stage('Coverage Test') {
            steps {
                script {
                    sh 'mvn clean test -P test jacoco:report'
                }
            }
        }
stage('Build Docker Image') {
    steps {
        script {
            docker.build("arsarah/alpine:1.0.0", "-f Dockerfile .")
        }
    }
}
}
   }     

